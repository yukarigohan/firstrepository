(define-syntax define-getter
  (er-macro-transformer
    (lambda (expr rename id=?)
      (let* ((name (symbol->string (cadr expr)))
             (str (string-append "get-" name))
             (sym (string->symbol str)))
        `(define (,sym) '("get" ,(cadr expr)))))))

(define-getter a)
(write (get-a))
;=> ("get" a)

