(define (replace-split str rep sub) 
  (let ((ls (string->list str)))
    ; check for EOL
    (if (null? (cdr ls))
      ls
      (cond  
        ((eqv? (car ls) #\space) 
         (replace-split (list->string (cdr ls)) rep sub))
        ((eqv? (car ls) rep) 
         (cons 
           sub
           (replace-split (list->string (cdr ls)) rep sub)))
        (else 
          (cons 
            (car ls)
            (replace-split (list->string (cdr ls)) rep sub)))))))

